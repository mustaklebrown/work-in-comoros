generator client {
  provider = "prisma-client-js"
  output   = "../src/app/prisma/generated/client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}

enum Island {
  GRANDE_COMORE
  ANJOUAN
  MOHELI
}

enum ContractType {
  CDI
  CDD
  STAGE
  PRESTATION
}

enum ApplicationStatus {
  PENDING
  INTERVIEW
  ACCEPTED
  REJECTED
}

model User {
  id            String  @id @default(cuid())
  email         String  @unique
  name          String?
  phone         String? // Verified phone number
  phoneVerified Boolean @default(false)
  role          Role    @default(CANDIDATE)

  // Better-Auth fields (standard placeholders)
  image         String?
  emailVerified Boolean?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?

  applications Application[]
  payrolls     Payroll[]

  // CV Fields
  headline   String?
  summary    String?
  skills     String? // Comma separated
  experience Json? // Entry[]: { company, role, from, to, description }
  education  Json? // Entry[]: { school, degree, year }
  location   String?

  sessions      Session[]
  accounts      Account[]
  notifications Notification[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime
  updatedAt  DateTime
}

model Company {
  id         String  @id @default(cuid())
  name       String
  sector     String?
  nif        String? // Num√©ro d'Identification Fiscale
  rc         String? // Registre de Commerce
  isVerified Boolean @default(false)

  // Document storage references could be added here

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recruiters User[]
  jobs       Job[]
}

model Job {
  id          String @id @default(cuid())
  title       String
  description String

  locationIsland Island
  locationCity   String

  salaryKMF Float?
  salaryEUR Float?

  contractType ContractType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company   Company @relation(fields: [companyId], references: [id])
  companyId String

  applications Application[]
}

model Application {
  id     String            @id @default(cuid())
  status ApplicationStatus @default(PENDING)

  // Can add resume URL, cover letter etc.
  resumeUrl     String?
  interviewDate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  job   Job    @relation(fields: [jobId], references: [id])
  jobId String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Payroll {
  id          String   @id @default(cuid())
  month       DateTime // Representing the month of the payslip
  grossSalary Float
  deductions  Float
  netSalary   Float

  pdfUrl String?

  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String // e.g., "INTERVIEW_SCHEDULED", "APPLICATION_UPDATE"
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
